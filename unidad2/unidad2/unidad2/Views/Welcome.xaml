<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="unidad2.Views.Welcome"  BackgroundImageSource="Background.png" >
    <ContentPage.Content>
        <StackLayout Spacing="10" >

            <StackLayout  VerticalOptions="Start" Margin="30,80,0,0" HorizontalOptions="Start">
                <Image Source="prime.png" WidthRequest="160" ></Image>
            </StackLayout>

            <StackLayout HorizontalOptions="Start" Margin="30,0,0,250">
                <Label   HorizontalOptions="Start"  FontAttributes="Italic" TextColor="White" Text="Bienvenido a la clase de programación Movil " FontSize="Medium"  VerticalOptions="Start" >
                </Label>
            </StackLayout>

            <Button Text="Login"  CornerRadius="30" BackgroundColor="white" WidthRequest="150" HorizontalOptions="Center" >
            </Button>



        </StackLayout>




    </ContentPage.Content>
</ContentPage>